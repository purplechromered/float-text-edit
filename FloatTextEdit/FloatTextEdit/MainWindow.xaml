<Window x:Class="FloatTextEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatTextEdit"
        mc:Ignorable="d"
        Title="FloatTextEdit" Height="451" Width="800" WindowStyle="None" AllowsTransparency="True" MouseLeave="Window_MouseLeave" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <RichTextBox x:Name="textEdit" Grid.ColumnSpan="2" UndoLimit="10000" FontFamily="Courier New" FontSize="14" RenderTransformOrigin="0.5,0.5" BorderBrush="{x:Null}" BorderThickness="0" Block.LineHeight="1">
            <FlowDocument>
                <Paragraph>
                    <Run Text="start"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
